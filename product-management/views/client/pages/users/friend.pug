extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert-success.pug

block content
  .container.my-3
    include ../../partials/list-btn-users.pug
    
    .row
      .col-12
        +box-head("Danh sách bạn bè")

    .row
      .col-6
        each user in users
          div(class="box-user" user_id=user.id)
            div(class="inner-avatar")
              img(
                src="https://robohash.org/hicveldicta.png", 
                alt=user.fullName
              )
            div(class="inner-info")
              div(class="inner-name") #{user.fullName}
              div(class="inner-buttons")
                a(
                  href=`/chat/${user.roomChatId}`
                  class="btn btn-sm btn-success mr-1"
                ) Nhắn tin

block script 
  script(src="/js/users.js")
