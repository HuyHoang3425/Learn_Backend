extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert-success.pug

block content
  +alert-success(2000)
  +alert-error(2000)

  .container.mb-5
    .row.justify-content-center
      .col-md-6
        .card.mt-5.shadow-lg
          .card-body
            h3.text-center.mb-4 Đăng nhập

            form(action="/user/login", method="POST")
              .mb-3
                label.form-label(for="email") Email
                input#email.form-control(type="email", name="email", required)

              .mb-3
                label.form-label(for="password") Mật khẩu
                input#password.form-control(type="password", name="password", required)

              button.btn.btn-primary.w-100(type="submit") Đăng nhập

            .d-flex.justify-content-between.mt-3
              a(href="/register") Đăng ký
              a(href="/user/password/forgot") Quên mật khẩu?