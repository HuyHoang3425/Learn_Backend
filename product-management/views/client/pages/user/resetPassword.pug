extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert-success.pug

block content
  +alert-success(2000)
  +alert-error(2000)

      
  block content
  .container.mt-5.d-flex.justify-content-center.mb-5
    .card.p-4.shadow-sm(style="width: 400px;")
      h4.text-center.mb-4 Đặt lại mật khẩu

      form(method="POST", action="/user/password/reset")
        //- Ẩn email (nếu cần truyền lại)
        input(type="hidden", name="email", value=email)

        .form-group.mb-3
          label(for="password") Mật khẩu mới
          input#password.form-control(
            type="password",
            name="password",
            required=true,
            minlength="6",
            placeholder="Nhập mật khẩu mới"
          )

        .form-group.mb-3
          label(for="confirmPassword") Xác nhận mật khẩu
          input#confirmPassword.form-control(
            type="password",
            name="confirmPassword",
            required=true,
            minlength="6",
            placeholder="Nhập lại mật khẩu"
          )

        button.btn.btn-primary.btn-block(type="submit") Xác nhận đổi mật khẩu