extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert-success.pug

block content
  +alert-success(2000)
  .container.my-3
    .row
      .col-12
        +box-head("Thanh toán thành công!")
    .row  
      .col-12 
        div(class="alert alert-success")
          | Chúc mừng bạn đã đặt hàng thành công ! CHúng tôi sẽ xử lý đơn hàng trong thời gian sớm nhất!
    .row  
      .col-12   
        h4(class="mb-2") Thông tin cá nhân
        table(class="table table-bordered")
          tbody 
            tr 
              td Họ tên 
              td #{order.userInfo.fullName}
            tr 
              td Số điện thoại
              td #{order.userInfo.phone}
            tr 
              td Địa chỉ
              td #{order.userInfo.address}
    .row
      .col-12
        h4(class="mb-2") Thông tin đơn hàng
        if order.products.length > 0
          table.table.table-bordered
            thead
              tr
                th STT
                th Ảnh
                th Tên sản phẩm
                th Giá
                th Số lượng
                th Tổng tiền
            tbody
              for item,index in order.products
                tr 
                  td #{index + 1}
                  td 
                    img(src=`${item.productInfo.thumbnail}`, alt="ảnh", style="width: 60px")
                  td #{item.productInfo.title}
                  td #{item.price}$
                  td #{item.quantity}
                  td #{item.totalProduct}$
    if(order.products.length > 0)
      h3(class="text-right") Tổng đơn hàng: #{order.total} $
