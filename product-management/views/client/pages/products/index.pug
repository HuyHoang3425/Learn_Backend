extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block content
  .container.my-3
    .row
      .col-12
        +box-head("danh sách sản phẩm")

    .row
      each item in products
        .col-4.mb-3
          a(href=`/products/${item.slug}`)
            .product-item
              .inner-image
                img(src="/images/product.jpg", alt="iPhonem 16")
              .inner-content
                h3.inner-title #{item.title}
                .inner-price-new #{Math.ceil(item.price - item.price * (item.discountPercentage / 100))}$
                .inner-price-old #{item.price}$
                .inner-discount #{item.discountPercentage}%
