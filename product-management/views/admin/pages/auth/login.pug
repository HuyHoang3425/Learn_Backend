doctype html
html
  head
    title Login Page
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  body
    .container.mt-5
      .row.justify-content-center
        .col-md-6
          .card.shadow
            .card-body
              h3.text-center.mb-4 Login

              form(method='POST', action='/admin/auth/login')
                .mb-3
                  label.form-label(for='email') Email address
                  input#email.form-control(type='email', name='email', placeholder='Enter your email', required)

                .mb-3
                  label.form-label(for='password') Password
                  input#password.form-control(type='password', name='password', placeholder='Enter your password', required)

                button.btn.btn-primary.w-100(type='submit') Log In

    // Bootstrap JS (optional for interactivity)
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
