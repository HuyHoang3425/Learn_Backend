extends ../../layouts/default.pug
include ../../mixins/alert-success.pug

block content 
  h1(class = "mb-4") Chi tiết sản phẩm 

  if (product.title)
  h1.mb-4 #{product.title}

  if (product.price)
    div.mb-4 Gia: 
      b #{product.price}$

  if (product.discountPercentage)
    div.mb-4 Giảm giá: 
      b #{product.discountPercentage}%

  if (product.stock)
    div.mb-4 Còn lại: 
      b #{product.stock}

  if (product.thumbnail)
    div.mb-4
      img(src=`/images/product.jpg`, style="width: 100px")

  if (product.status)
    div.mb-4
      span Trạng thái: 
      if (product.status === "active")
        span.badge.badge-success Hoạt động
      else
        span.badge.badge-danger Dừng hoạt động

  if (product.position)
    div.mb-4 Vị trí: 
      b #{product.position}

  if (product.description)
    div.mb-4 #{product.description}

  a(
    class="btn btn-warning btn-sm"
    href=`${prefixAdmin}/products/edit/${product.id}`
  ) Chỉnh sửa

  script(src="/admin/js/product.js") 