extends ../../layouts/default.pug
include ../../mixins/alert-success.pug

block content 
  .card.mb-3
     h1 danh sách sản phẩm
  +alert-error(3000)
  form(
    action=`${prefixAdmin}/products-category/create`
    id="form-create-product"
    method="POST"
    enctype="multipart/form-data"
  )
    div(class="form-group")
      lable(for="title") Tiêu đề
      br
      input(
        type="text"
        class="form=control"
        id="title"
        name="title"
        required
      )
    div(class="form-group")
      lable(for="parent_id") Danh mục cấp 1
        br
      input(
        type="text"
        class="form=control"
        id="parent_id"
        name="parent_id"
      )
    div(
      class="form-group"
    )
      lable(for="desc") Mô tả
      textarea(
        class="form-control tinymce"
        id="desc"
        name="description"
        rows="5"
      )
    div(class="form-group" upload-image)
      label(for="thumbnail") Ảnh
      input(
        type="file"
        class="form-control-file"
        id="thumbnail"
        name="thumbnail"
        accept="image/*"
        upload-image-input
      )
      img(
        src=""
        upload-image-preview
      )
      div(close-img) X
    div(class="form-group")
      label(for="position") Vị trí
      input(
        type="text"
        class="form-control"
        id="position"
        name="position"
        placeholder="Tự động tăng"
        min="1"
      )
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked
      )
      lable(for="statusActive" class="form-check-lable") Hoạt động
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusInActive"
        name="status"
        value="inactive"
      )
      lable(for="statusINActive" class="form-check-lable") Dừng hoạt động
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Tạo mới
  script(src="/admin/js/product.js") 
  script(type="application/javascript" src="/tinymce/tinymce.min.js") 
  script(src="/admin/js/tinymce-config.js")