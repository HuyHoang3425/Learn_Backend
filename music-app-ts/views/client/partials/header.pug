style.
  .music-header {
    background: linear-gradient(135deg, #3f4870ff 0%, #764ba2 100%);
    box-shadow: 0 2px 15px rgba(0,0,0,0.1);
    position: sticky;
    top: 0;
    z-index: 1000;
  }
  
  .navbar-brand {
    font-weight: bold;
    font-size: 1.8rem;
    color: white !important;
  }
  
  .navbar-brand i {
    margin-right: 8px;
    color: #ffd700;
  }
  
  .navbar-nav .nav-link {
    color: rgba(255,255,255,0.9) !important;
    font-weight: 500;
    margin: 0 10px;
    padding: 8px 16px !important;
    border-radius: 20px;
    transition: all 0.3s ease;
  }
  
  .navbar-nav .nav-link:hover {
    background-color: rgba(255,255,255,0.1);
    color: white !important;
    transform: translateY(-2px);
  }
  
  .navbar-nav .nav-link.active {
    background-color: rgba(255,255,255,0.2);
    color: white !important;
  }
  
  .search-form {
    position: relative;
    max-width: 300px;
  }
  
  .search-form input {
    border-radius: 25px;
    border: none;
    padding: 8px 40px 8px 16px;
    background-color: rgba(255,255,255,0.9);
    color: #333;
  }
  
  .search-form input:focus {
    box-shadow: 0 0 0 3px rgba(255,255,255,0.3);
    outline: none;
  }
  
  .search-btn {
    position: absolute;
    right: 8px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: #666;
  }
  
  .user-menu .dropdown-toggle {
    background-color: rgba(255,255,255,0.1);
    border: 2px solid rgba(255,255,255,0.3);
    border-radius: 50px;
    padding: 6px 12px;
    color: white;
  }
  
  .user-menu .dropdown-toggle:hover {
    background-color: rgba(255,255,255,0.2);
    border-color: rgba(255,255,255,0.5);
  }
  
  .navbar-toggler {
    border: none;
    padding: 4px 8px;
  }
  
  .navbar-toggler-icon {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.8%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
  }
  .search-suggest {
    padding:10px 0;
    position: absolute;
    top: 100%; /* ngay dưới input */
    left: 0;
    right: 0;
    background: white;
    border-radius:12px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    z-index: 2000;
    max-height: 250px;
    overflow-y: auto;
    display: none; /* mặc định ẩn */
    margin-top:10px;
  }

  .search-suggest.show {
    display: block; /* khi có class .show thì hiện */
  }

  .search-suggest .item {
    padding: 10px 15px;
    cursor: pointer;
    border-bottom: 1px solid #eee;
  }

  .search-suggest .item:last-child {
    border-bottom: none;
  }

  .search-suggest .item:hover {
    background: #f5f5f5;
  }

  .search-suggest .title {
    font-weight: 600;
    color: #333;
  }

  .search-suggest .singer {
    font-size: 0.9rem;
    color: #777;
  }


header.music-header
  nav.navbar.navbar-expand-lg.navbar-dark
    .container
      // Brand
      a.navbar-brand(href="/")
        i.fas.fa-music
        | MusicApp
      
      // Mobile toggle
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav")
        span.navbar-toggler-icon
      
      // Navigation
      .collapse.navbar-collapse#navbarNav
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link.active(href="/") 
              i.fas.fa-home.mr-1
              | Trang chủ
          li.nav-item
            a.nav-link(href="/discover")
              i.fas.fa-compass.mr-1
              | Khám phá
          li.nav-item
            a.nav-link(href="/charts")
              i.fas.fa-chart-line.mr-1
              | BXH
          li.nav-item
            a.nav-link(href="/playlist")
              i.fas.fa-list-ul.mr-1
              | Playlist
          li.nav-item
            a.nav-link(href="/artists")
              i.fas.fa-microphone.mr-1
              | Nghệ sĩ
        
        // Search form
        form.search-form.mx-3.my-2.my-lg-0(
          action="/search/result"
          method="GET"
        )
          input.form-control(type="search", placeholder="Tìm kiếm bài hát, nghệ sĩ..."
          name="keyword"
          value=keyword
          )
          button.search-btn(type="submit")
            i.fas.fa-search

          .search-suggest
        
        // User menu
        .user-menu.dropdown
          button.btn.dropdown-toggle(type="button", data-toggle="dropdown")
            i.fas.fa-user.mr-1
            | Tài khoản
          .dropdown-menu.dropdown-menu-right
            a.dropdown-item(href="/profile")
              i.fas.fa-user-circle.mr-2
              | Hồ sơ
            a.dropdown-item(href="/favorites")
              i.fas.fa-heart.mr-2
              | Yêu thích
            a.dropdown-item(href="/history")
              i.fas.fa-history.mr-2
              | Lịch sử
            .dropdown-divider
            a.dropdown-item(href="/settings")
              i.fas.fa-cog.mr-2
              | Cài đặt
            a.dropdown-item(href="/logout")
              i.fas.fa-sign-out-alt.mr-2
              | Đăng xuất
